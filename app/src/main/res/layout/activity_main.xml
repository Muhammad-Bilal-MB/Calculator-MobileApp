<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:text="CALCULATOR"
            android:textColor="@color/teal_700"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:hint="Enter 1st Number"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:textAlignment="center"></EditText>

        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp"
            android:hint="Enter 2nd Number"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:textAlignment="center"></EditText>

        <EditText
            android:id="@+id/etresult"
            android:layout_width="368dp"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray"
            android:editable="false"
            android:hint="Result"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:textAlignment="center"
            android:textColor="@color/red"></EditText>

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etresult"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="52dp"
            android:background="@color/black"
            android:text="1"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etresult"
            android:layout_centerInParent="true"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="53dp"
            android:layout_toRightOf="@+id/bt1"
            android:background="@color/black"
            android:text="2"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etresult"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="53dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/bt2"

            android:background="@color/black"
            android:text="3"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"

            android:background="@color/black"
            android:text="4"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt2"
            android:layout_centerInParent="true"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/bt4"
            android:background="@color/black"
            android:text="5"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt3"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/bt5"

            android:background="@color/black"
            android:text="6"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"

            android:background="@color/black"
            android:text="7"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt5"
            android:layout_centerInParent="true"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/bt7"
            android:background="@color/black"
            android:text="8"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt6"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/bt8"

            android:background="@color/black"
            android:text="9"
            android:textSize="20dp"></Button>


        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt8"
            android:layout_centerInParent="true"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/btplus"
            android:background="@color/black"
            android:text="0"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/btperiod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt9"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/bt0"

            android:background="@color/black"
            android:text="."
            android:textSize="20dp"></Button>


        <Button
            android:id="@+id/btplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt7"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="87dp"
            android:backgroundTint="@color/red"

            android:text="+"
            android:textSize="20dp"></Button>


        <Button
            android:id="@+id/btmul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="551dp"
            android:backgroundTint="@color/red"

            android:text="*"
            android:textSize="20dp"></Button>


        <Button
            android:id="@+id/btdiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="551dp"
            android:backgroundTint="@color/red"

            android:text="/"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/btminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt9"
            android:layout_marginLeft="301dp"
            android:layout_marginTop="86dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/red"
            android:text="-"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/btequal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btplus"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/red"
            android:text="="
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/btclear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btequal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/gray"
            android:text="CLEAR"
            android:textColor="@color/red"
            android:textSize="20dp"></Button>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>